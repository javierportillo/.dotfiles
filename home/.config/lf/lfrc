set hidden false
set ignorecase true
set drawbox false
set icons true
set previewer ~/.config/lf/previewer
set cleaner ~/.config/lf/cleaner

cmd mkdir ${{
  printf "Directory name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File name: "
  read ans
  touch $ans
}}

cmd chmod ${{
  printf "Mode bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done
}}

cmd OpenGallery ${{
  swiv -tr "$PWD"
}}

map x delete
map G OpenGallery

