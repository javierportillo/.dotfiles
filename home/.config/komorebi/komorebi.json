{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "default_workspace_padding": 0,
  "default_container_padding": 0,
  "active_window_border": true,
  "active_window_border_colours": {
    "single": "#9CCFD8",
    "stack": "#F6C177",
    "monocle": "#EBBCBA"
  },
  "display_index_preferences": {
    "0": "DELA0EC-5&33963ada&0&UID176385",
    "1": "DELA199-5&33963ada&0&UID176387"
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "Primary",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "id": "chrome.exe",
              "kind": "Exe",
              "matching_strategy": "Equals"
            },
            {
              "id": "wezterm-gui.exe",
              "kind": "Exe",
              "matching_strategy": "Equals"
            },
            {
              "id": "WindowsTerminal.exe",
              "kind": "Exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Other",
          "layout": "Grid"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "Secondary",
          "layout": "Grid",
          "workspace_rules": [
            {
              "id": "Pomodor",
              "kind": "Title",
              "matching_strategy": "Contains"
            },
            {
              "id": "Obsidian.exe",
              "kind": "Exe",
              "matching_strategy": "Equals"
            }
          ]
        },
        {
          "name": "Chat",
          "layout": "Grid",
          "initial_workspace_rules": [
            {
              "id": "WhatsApp",
              "kind": "Title",
              "matching_strategy": "Contains"
            },
            {
              "id": "Discord.exe",
              "kind": "Exe",
              "matching_strategy": "Equals"
            },
            {
              "id": "Slack.exe",
              "kind": "Exe",
              "matching_strategy": "Equals"
            }
          ]
        }
      ]
    }
  ]
}
